{	
	"compilerOptions": {
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"noImplicitAny": true,
		"module": "CommonJS",
		"target": "ES2018",
		"allowJs": false,
		"moduleResolution": "node",
		//"types": ["node", "jest"],
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@reporting/bp-frontend": ["packages/frontend"]
		}
	},
	"exclude": [
		"**/jest.config.ts",
		"**/dist/**",
		"**/*.spec.ts",
		"**/*.test.ts"
	]
}
